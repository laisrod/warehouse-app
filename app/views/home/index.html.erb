<style>
  .hover-white:hover {
    background-color: white !important;
    color: #212529 !important;
  }
</style>

<section id="warehouses" class="container mt-4 bg-dark text-white">
  <h2 class="mb-4">Galpões</h2>
  <div class="mb-3">
    <%= link_to('Cadastrar Galpão', new_warehouse_path, class: 'btn bg-dark border-white text-white hover-white px-4 py-2') %>
  </div>
  
  <div class="row">
    <% @warehouses.each do |w| %>
      <div class="col-md-4 mb-4">
        <div class="card bg-dark border-light border-1">
          <div class="card-body p-3">
            <h3 class="card-title mb-3 text-white"><%= link_to(w.name, w, class: 'text-decoration-none text-white') %></h3>
            <div class="row">
              <div class="col-4">
                <dt class="text-white">Código:</dt>
                <dd class="text-white"><%= w.code %></dd>
              </div>
              <div class="col-4">
                <dt class="text-white">Cidade:</dt>
                <dd class="text-white"><%= w.city %></dd>
              </div>
              <div class="col-4">
                <dt class="text-white">Área:</dt>
                <dd class="text-white"><%= w.area %> m²</dd>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @warehouses.empty? %>
    <p class="alert alert-info">Não existem galpões cadastrados</p>
  <% end %>
</section>