<div class="container mt-4">
  <h1 class="mb-4">Novo Fornecedor</h1>

  <% if(@supplier.errors.any?) %>
    <div class="alert alert-danger">
      <p>Verifique os erros abaixo:</p>
      <ul>
        <% @supplier.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @supplier, class: 'row g-3') do |f| %>
    <div class="col-md-6">
      <%= f.label :corporate_name, class: 'form-label' %>
      <%= f.text_field :corporate_name, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :brand_name, class: 'form-label' %>
      <%= f.text_field :brand_name, class: 'form-control' %>
    </div>
    <div class="col-12">
      <%= f.label :full_address, class: 'form-label' %>
      <%= f.text_field :full_address, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :registration_number, class: 'form-label' %>
      <%= f.text_field :registration_number, class: 'form-control' %>
    </div>
    <div class="col-md-4">
      <%= f.label :city, class: 'form-label' %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>
    <div class="col-md-2">
      <%= f.label :state, class: 'form-label' %>
      <%= f.text_field :state, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :email, class: 'form-label' %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="col-12 mt-3">
      <%= f.submit 'Cadastrar novo fornecedor', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>