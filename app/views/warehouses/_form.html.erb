
<% if(@warehouse.errors.any?) %>
<p>Verifique os erros abaixo:</p>
<ul>
    <% @warehouse.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_with(model: @warehouse) do |f| %>
    <div class="mb-3 col-md-6">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3 col-md-6">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="mb-3 col-md-6">
        <%= f.label :code, class: "form-label" %>
        <%= f.text_field :code, class: "form-control" %>
    </div>
    <div class="mb-3 col-md-6">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_field :address, class: "form-control" %>
    </div>
    <div class="mb-3 col-md-6">
        <%= f.label :city, class: "form-label" %>
        <%= f.text_field :city, class: "form-control" %>
    </div>
    <div class="mb-3 col-md-6">
        <%= f.label :cep, class: "form-label" %>
        <%= f.text_field :cep, class: "form-control" %>
    </div>
    <div class="mb-3 col-md-6">
        <%= f.label :area, class: "form-label" %>
        <%= f.number_field :area, class: "form-control" %>
    </div>
    <div class="mb-3 d-inline-block">
        <%= f.submit 'Enviar', class: "btn btn-outline-light text-white hover-gray" %>
    </div>
    <%= link_to 'Voltar', root_path, class: "btn btn-outline-light text-white hover-gray" %>
<% end %>
