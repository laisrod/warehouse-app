<div class="container mt-4">
  <div class="card shadow-lg border-0 bg-dark text-light">
    <div class="card-header bg-dark border-secondary py-4">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="mb-0 h3"><i class="fas fa-warehouse me-2"></i><%= @warehouse.name %></h1>
        <div>
          <span class="badge bg-success text-light me-2 px-3 py-2">
            <i class="fas fa-star me-1"></i>Ativo
          </span>
          <span class="badge bg-secondary text-light fs-6 px-3 py-2">
            <i class="fas fa-expand-alt me-1"></i><%= @warehouse.area %> m²
          </span>
        </div>
      </div>
    </div>
    
    <div class="card-body p-4">
      <div class="alert bg-dark border border-secondary mb-4">
        <div class="d-flex align-items-center">
          <i class="fas fa-info-circle me-3 fs-4 text-info"></i>
          <div>
            <h5 class="alert-heading mb-2 text-info">Descrição do Galpão</h5>
            <%= @warehouse.description %>
          </div>
        </div>
      </div>

      <div class="row mb-4 g-4">
        <div class="col-md-6">
          <div class="card h-100 border-0 bg-dark border border-secondary">
            <div class="card-body">
              <h5 class="card-title mb-3 pb-2 text-info border-bottom border-secondary">
                <i class="fas fa-info-circle me-2"></i>Informações Principais
              </h5>
              <p class="card-text d-flex align-items-center">
                <i class="fas fa-building me-3 text-info"></i>
                <span><strong>Nome: </strong><%= @warehouse.name %></span>
              </p>
              <p class="card-text d-flex align-items-center">
                <i class="fas fa-city me-3 text-info"></i>
                <span><strong>Cidade: </strong><%= @warehouse.city %></span>
              </p>
              <p class="card-text d-flex align-items-center">
                <i class="fas fa-ruler-combined me-3 text-info"></i>
                <span><strong>Área: </strong><%= @warehouse.area %> m²</span>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card h-100 border-0 bg-dark border border-secondary">
            <div class="card-body">
              <h5 class="card-title mb-3 pb-2 text-info border-bottom border-secondary">
                <i class="fas fa-map-marked-alt me-2"></i>Localização
              </h5>
              <p class="card-text d-flex align-items-center">
                <i class="fas fa-map-marker-alt me-3 text-info"></i>
                <span><strong>Endereço: </strong><%= @warehouse.address %></span>
              </p>
              <p class="card-text d-flex align-items-center">
                <i class="fas fa-mail-bulk me-3 text-info"></i>
                <span><strong>CEP: </strong><%= @warehouse.cep %></span>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="d-flex gap-3 mb-4">
        <%= link_to edit_warehouse_path(@warehouse.id), class: 'btn btn-outline-info btn-lg px-4' do %>
          <i class="fas fa-edit me-2"></i>Editar
        <% end %>
        
        <%= button_to warehouse_path(@warehouse.id), method: :delete, 
            class: 'btn btn-outline-danger btn-lg px-4', 
            form: { style: 'display: inline-block' },
            data: { confirm: 'Tem certeza que deseja remover este galpão?' } do %>
          <i class="fas fa-trash-alt me-2"></i>Remover
        <% end %>
        
        <%= link_to root_path, class: 'btn btn-outline-light btn-lg px-4' do %>
          <i class="fas fa-arrow-left me-2"></i>Voltar
        <% end %>
      </div>
    </div>
  </div>
</div>
<style>
.hover-shadow:hover {
  transform: translateY(-3px);
  transition: transform 0.2s ease-in-out;
  box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
}

.bg-gradient {
  background: linear-gradient(45deg, #0d6efd, #0a58ca);
}
</style>

