<div class="container mt-4">
  <h1 class="mb-4">Cadastrar Novo Modelo de Produto</h1>

  <%= form_with(model: @product_model) do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :weight, class: "form-label" %>
          <%= f.number_field :weight, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :height, class: "form-label" %>
          <%= f.text_field :height, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :sku, class: "form-label" %>
          <%= f.text_field :sku, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :width, class: "form-label" %>
          <%= f.text_field :width, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :depth, class: "form-label" %>
          <%= f.text_field :depth, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :supplier_id, class: "form-label" %>
          <%= f.collection_select :supplier_id, @suppliers, :id, :brand_name, {}, class: "form-select" %>
        </div>
      </div>
    </div>

    <div class="mt-3">
      <%= f.submit 'Enviar', class: "btn btn-dark px-4 border border-white" %>
      <%= link_to 'Voltar', root_path, class: "btn btn-dark px-4 border border-white ms-2" %>
    </div>
  <% end %>
</div>

